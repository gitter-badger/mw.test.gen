import testing ;

project parser :
	source-location .	
	: requirements
	<include>$(boost-inc)
	<include>../../include
	<toolset>gcc:<cxxflags>-std=gnu++1y
	<linkflags>-LF:/boost/lib
	<link>shared
	<define>UNIT_TEST
	;
	

test-suite mw.test.parser
     : 
    [ run test_id.cpp  		]
	[ run test_comment.cpp 	]    
	[ run test_file.cpp /mw.test.gen//parser 	]   
	[ run test_utility.cpp  ]  
	[ run test_tpl.cpp 	 /mw.test.gen//parser	]
	[ run test_code.cpp  /mw.test.gen//parser	] 
	[ run test_opers.cpp ]
	[ run test_actions.cpp	]
	[ run test_obj_cnt.cpp	]
	[ run test_objects.cpp	]
	[ run test_functional.cpp  /mw.test.gen//parser ]
	[ run test_group.cpp ]
	[ run test_expressions.cpp /mw.test.gen//parser ]
     ; 	
		
		