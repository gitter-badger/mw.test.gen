import testing ;

project parser :
	source-location .	
	: requirements
	<include>$(boost-inc)
	<include>../../include
	<toolset>gcc:<cxxflags>-std=gnu++1y
	<toolset>gcc:<cxxflags>-ftemplate-depth=512
	<linkflags>-LF:/boost/lib
	<link>shared
	;
	

lib parser : ../../src/mw/test/parser.cpp  ;

test-suite mw.test.parser
     : 
    [ run test_id.cpp  		]
	[ run test_comment.cpp 	]    
	[ run test_file.cpp parser 	]   
	[ run test_utility.cpp  ]  
	[ run test_tpl.cpp 	 parser	]
	[ run test_code.cpp  parser	] 
	[ run test_opers.cpp ]
	[ run test_actions.cpp	]
	[ run test_obj_cnt.cpp	]
	[ run test_objects.cpp	]
	[ run test_functional.cpp parser ]
	[ run test_group.cpp ]
	[ run test_expressions.cpp parser ]
     ; 	
		
		